<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/below_ll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/common_white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/below_shut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/dingshi" />

            <TextView
                style="@style/BelowDialog"
                android:text="定时" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/below_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/below_mode_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/mode_random" />

            <TextView
                android:id="@+id/below_mode_tv"
                style="@style/BelowDialog"
                android:text="随机播放" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/below_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/saomiao" />

            <TextView
                style="@style/BelowDialog"
                android:text="扫描音乐" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/below_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/tuichu" />

            <TextView
                style="@style/BelowDialog"
                android:text="退出" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/below_dismiss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/below_ll"
        android:layout_alignParentRight="true"
        android:background="@drawable/x" />

</RelativeLayout>