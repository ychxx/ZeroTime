<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray" >

    <LinearLayout
        android:id="@+id/music_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/music_my_rl"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/music_my_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icon_local_music" />

            <TextView
                android:id="@+id/music_my_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/music_my_iv"
                android:text="我的音乐"
                android:textColor="@color/common_white" />

            <TextView
                android:id="@+id/music_my_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_my_tv"
                android:layout_toRightOf="@id/music_my_iv"
                android:text="歌曲:233"
                android:textColor="@color/common_white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_one"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/music_nearest_ll"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue" >

            <ImageView
                android:id="@+id/music_nearest_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icon_nearest" />

            <TextView
                android:id="@+id/music_nearest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/music_nearest_iv"
                android:text="最近播放"
                android:textColor="@color/common_white" />

            <TextView
                android:id="@+id/music_nearest_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_nearest_tv"
                android:layout_toRightOf="@id/music_nearest_iv"
                android:text="歌曲:10"
                android:textColor="@color/common_white"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/music_love_ll"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue" >

            <ImageView
                android:id="@+id/music_love_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/love_white" />

            <TextView
                android:id="@+id/music_love_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/music_love_iv"
                android:text="我的最爱"
                android:textColor="@color/common_white" />

            <TextView
                android:id="@+id/music_love_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_love_tv"
                android:layout_toRightOf="@id/music_love_iv"
                android:text="歌曲:233"
                android:textColor="@color/common_white" 
                android:visibility="invisible"/>
        </RelativeLayout>

