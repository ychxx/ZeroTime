<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray" >

    <RelativeLayout
        style="@style/common_title_style"
        android:background="@color/common_blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_title_size" />

        <Button
            android:id="@+id/personcenter_break"
            style="@style/common_black_bt" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="45dp" >

        <Button
            android:id="@+id/personcenter_password"
            style="@style/abc_button"
            android:text="修改密码"
            android:textColor="@color/common_white" />

        <Button
            android:id="@+id/personcenter_out"
            style="@style/abc_button"
            android:text="退出登入"
            android:textColor="@color/common_white" />
    </LinearLayout>

</RelativeLayout>