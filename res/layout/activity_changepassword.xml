<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray" >

    <RelativeLayout
        style="@style/common_title_style"
        android:background="@color/common_blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_title_size" />

        <Button
            android:id="@+id/shut_break"
            style="@style/common_black_bt" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <FrameLayout
            style="@style/common_blue_layout"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/change_old_password"
                style="@style/common_blue_edittext"
                android:hint="旧密码"
                android:inputType="textPassword" />

            <ImageView
                android:layout_width="@dimen/login_icon"
                android:layout_height="@dimen/login_icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pwd" />
        </FrameLayout>

        <FrameLayout
            style="@style/common_blue_layout"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/change_new_password"
                style="@style/common_blue_edittext"
                android:hint="新密码"
                android:inputType="textPassword" />

            <ImageView
                android:layout_width="@dimen/login_icon"
                android:layout_height="@dimen/login_icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pwd" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" >

        <Button
            android:id="@+id/change_cancel"
            style="@style/abc_set_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:text="取消" />

        <Button
            android:id="@+id/change_confirm"
            style="@style/abc_set_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="确定" />
    </RelativeLayout>

</RelativeLayout>