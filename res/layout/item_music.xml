<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_list_height"
        android:background="@color/common_gray"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/music_love"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/love_white_blue" />

        <RelativeLayout
            android:id="@+id/music_list_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/music_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/music_list_name_top"
                android:text="1."
                android:textColor="@color/common_blue"
                android:textSize="@dimen/music_list_name_size" />

            <TextView
                android:id="@+id/music_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/music_list_name_top"
                android:layout_toRightOf="@id/music_number"
                android:singleLine="true"
                android:text="神的随波逐流"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/music_list_name_size" />

            <TextView
                android:id="@+id/music_author"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_number"
                android:layout_marginTop="@dimen/music_list_name_top"
                android:singleLine="true"
                android:text="泠鸢"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/music_list_author_size" />

            <TextView
                android:id="@+id/music_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/music_author"
                android:layout_alignBottom="@+id/music_author"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text="03:15"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/music_list_author_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/music_list_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/music_list_more_right"
            android:background="@drawable/delete" />
    </LinearLayout>

</RelativeLayout>